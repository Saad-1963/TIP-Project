{
  "version" : 2,
  "builds" : [
    {
      "src" : "safe_guard/wsgi.py",
      "use" : "@versel/python",
      "config" : {"maxLambdaSize": "15mb", "runtime": "python3.12"}
    },
    {
      "src" : "build_files.sh",
      "use" : "@versel/static-build",
      "config" : {"distDir": "staticfiles_build"}
    }
  ],
  "routes" : [
    {
      "src" : "/static/(.*)",
      "dest" : "/static/$1"
    },
    {
      "src" : "/(.*)",
      "dest" : "safe_guard/wsgi.py"
    }
  ]
}